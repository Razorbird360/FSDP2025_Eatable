{
  "name": "fsdp2025-eatable",
  "version": "1.0.0",
  "private": true,
  "description": "Community-driven hawker centre eMenu platform",
  "scripts": {
    "dev": "pnpm --parallel -r dev",
    "dev:client": "pnpm --filter client dev",
    "dev:server": "pnpm --filter server dev",
    "dev:ai": "node scripts/lib/dev-ai.js",
    "dev:all": "concurrently \"pnpm dev:client\" \"pnpm dev:server\" \"pnpm dev:ai\"",
    "dev:metrics": "docker compose -f monitoring/docker-compose.yml up -d",
    "docker:full": "docker compose -f docker-compose.full.yml up -d --build",
    "docker:migrate": "docker compose -f docker-compose.full.yml exec server pnpm --filter server prisma migrate deploy",
    "setup:ai": "node scripts/lib/setup-ai-check.js",
    "build": "pnpm -r build",
    "build:client": "pnpm --filter client build",
    "build:server": "pnpm --filter server build",
    "prisma:generate": "pnpm --filter server prisma:generate",
    "prisma:migrate": "pnpm --filter server prisma:migrate",
    "prisma:studio": "pnpm --filter server prisma:studio",
    "prisma:seed": "pnpm --filter server prisma:seed",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "lint": "pnpm --filter client lint && pnpm --filter server lint"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "concurrently": "^8.2.2",
    "prettier": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "html5-qrcode": "^2.3.8",
    "qr-scanner": "^1.4.2",
    "qrcode.react": "^4.2.0"
  }
}
